                    <p class="card-text">@ViewBag.BildirimSayisi</p>
                    <p class=""><a asp-action="Index" asp-controller="Bildirim" class="btn btn-light btn-sm"><i class="fa-solid fa-circle-arrow-right mr-2"></i>İncele</a></p>

                }
                else
                {
                    <p class="card-text">Herhangi Bir Bildiriminiz Yok.</p>
                }
            </div>
        </div>

    </div>

    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-header">Header</div>
            <div class="card-body">
                <h4 class="card-title">Tamamlanan Görev Sayısı</h4>
                @if (ViewBag.TamamlananmayanGorevSayisi > 0)
                {
                    <p class="card-text">@ViewBag.TamamlananmayanGorevSayisi</p>
                    <p class=""><a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm"><i class="fa-solid fa-circle-arrow-right mr-2"></i>İncele</a></p>

                }
                else
                {
                    <p class="card-text">Herhangi Bir Görev Tamamlamamışsınız.</p>
                }
            </div>
        </div>

    </div>
</div>







@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-6">

        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-header">Header</div>
            <div class="card-body">
                <h4 class="card-title">Rapor Sayısı</h4>
                @if (ViewBag.RaporSayisi > 0)
                {
                    <p class="card-text">@ViewBag.RaporSayisi</p>
                }
                else
                {
                    <p class="card-text">Herhangi Bir Rapor Yazmamışsınız.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-header">Header</div>
            <div class="card-body">
                <h4 class="card-title">Tamamlanan Görev Sayısı</h4>
                @if (ViewBag.TamamlananGorevSayisi > 0)
                {
                    <p class="card-text">@ViewBag.TamamlananGorevSayisi</p>
                    <p class=""><a asp-action="Index" asp-controller="Gorev" class="btn btn-light btn-sm"><i class="fa-solid fa-circle-arrow-right mr-2"></i>İncele</a></p>

                }
                else
                {
                    <p class="card-text">Herhangi Bir Görev Tamamlamamışsınız.</p>
                }
            </div>
        </div>

    </div>
</div>
<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-header">Header</div>
            <div class="card-body">
                <h4 class="card-title">Tamamlanan Görev Sayısı</h4>
                @if (ViewBag.BildirimSayisi > 0)

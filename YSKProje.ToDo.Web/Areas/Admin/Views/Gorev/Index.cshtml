@model List<GorevListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="EkleGorev" class="btn btn-info btn-sm">Yeni Görev Oluştur</a>

    <table>
        <tr>
            <th>Ad</th>
            <th>Aciklama</th>
            <th>Durum</th>
            <th>Aciliyet Id</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.Durum</td>
                <td>@item.AciliyetId</td>
                <td>
                    <a href="">Düzenle</a>
                    <a href="">Sil</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="p-3 text-center mt-3">
        <p class="lead">
            Herhangi bir görev bulunamadı
        </p>
        <a asp-action="EkleGorev" class="bt btn-info btn-sm">Bir Görev Oluştur</a>
    </div>
}

@model GorevListViewModel
@{
    ViewData["Title"] = "AtaPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-md-4">
        <div class="card border border-primary">

            <div class="card-header">
                <h4 class="text-center lead pt-2">Görev Bilgileri</h4>
            </div>

            <div class="card-body">
                <h5 class="card-title">@Model.Ad</h5>
                <p class="card-text">@Model.Aciklama</p>
                <p class="card-text">
                    <strong>Aciliyet Durumu:</strong><span class="badge badge-primary">@Model.Aciliyet.Tanim</span>
                </p>
                <p class="card-text">
                    <small>@Model.OlusturulmaTarih.ToString("D")</small>
                </p>
            </div>

        </div>

    </div>
    
    <div class="col-md-8">
        
        @foreach (var item in (List<AppUserListViewModel>)ViewBag.Personeller)
        {
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@item.Picture" class="card-img" alt="@item.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name @item.Surname</h5>
                            <p class="card-text">Bir Görev Almış Mı?</p>
                            <p class="card-text"><small class="text-muted">@item.Email</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <nav aria-label="Page navigation example">
            
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.ToplamSayfa; i++)
                {
                    <li class="page-item @(ViewBag.AktifSayfa == i ? "active" : "")">
                        <a asp-action="AtaPersonel" asp-route-id="@Model.Id" asp-route-sayfa="@i" class="page-link">@i</a>
                    </li>

                }
               

            </ul>
        </nav>

    </div>

</div>


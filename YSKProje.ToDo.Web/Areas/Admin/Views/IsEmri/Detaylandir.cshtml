@model GorevListViewAllModel
@{
    ViewData["Title"] = "Detaylandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Raporlar.Count > 0)
{
    <a class="btn btn-outline-info btn-sm mt-2 mr-2"><i class="fa-solid fa-file-arrow-down mr-2"></i>Excel</a>
    <a class="btn btn-outline-info btn-sm mt-2"><i class="fa-solid fa-file-pdf mr-2"></i>Pdf</a>
    <table class="table table-hover table-sm mt-2 text-center table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname personelinizin @Model.Ad görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var rapor in Model.Raporlar)
        {
            <tr>
                <td>@rapor.Tanim</td>
                <td>@rapor.Detay</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname personeliniz şuan da @Model.Ad görevi üzerinde çalışıyor.Henüz bir rapor yazmamış.
    </div>
}
